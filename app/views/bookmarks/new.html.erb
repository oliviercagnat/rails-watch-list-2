<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h1>Add bookmark for <%= @list.name %></h1>
      <%= simple_form_for([@list, @bookmark]) do |f| %>
        <%= f.input :comment %>
        <%= f.association :movie %>
        <%= f.submit "Submit", class: "btn btn-primary"%>
        <%= link_to 'Back', @list %>
      <% end %>
    </div>
  </div>
</div>
